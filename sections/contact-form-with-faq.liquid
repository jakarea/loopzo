<!-- Contact Form with FAQ Banner Section -->
<section class="contact-form-section bg-slate-50 py-12 sm:py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16">

            <!-- Left: Contact Form -->
            <div>
                {% if section.settings.form_heading != blank %}
                <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-8 lg:mb-10">
                    {{ section.settings.form_heading }}
                </h2>
                {% endif %}

                {% form 'contact' %}
                    {% if form.posted_successfully? %}
                        <div class="bg-green-50 border border-green-200 text-green-800 px-4 py-3 rounded-lg mb-6">
                            {{ section.settings.success_message }}
                        </div>
                    {% endif %}

                    {% if form.errors %}
                        <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
                            <p class="font-semibold">{{ section.settings.error_heading }}</p>
                            <ul class="list-disc list-inside mt-2">
                                {% for field in form.errors %}
                                    <li>{{ field }} - {{ form.errors.messages[field] }}</li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% endif %}

                    <div class="space-y-4">
                        <!-- Name & Email - Two columns -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                            <!-- Name -->
                            <div>
                                <input type="text"
                                       name="contact[name]"
                                       id="ContactForm-name"
                                       required
                                       placeholder="{{ section.settings.name_placeholder }}"
                                       class="w-full px-4 py-3.5 rounded-md border border-slate-300 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:border-transparent bg-white placeholder:text-slate-400 text-sm">
                            </div>

                            <!-- Email -->
                            <div>
                                <input type="email"
                                       name="contact[email]"
                                       id="ContactForm-email"
                                       required
                                       placeholder="{{ section.settings.email_placeholder }}"
                                       autocomplete="email"
                                       class="w-full px-4 py-3.5 rounded-md border border-slate-300 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:border-transparent bg-white placeholder:text-slate-400 text-sm">
                            </div>
                        </div>

                        <!-- Subject -->
                        <div>
                            <input type="text"
                                   name="contact[subject]"
                                   id="ContactForm-subject"
                                   placeholder="{{ section.settings.subject_placeholder }}"
                                   class="w-full px-4 py-3.5 rounded-md border border-slate-300 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:border-transparent bg-white placeholder:text-slate-400 text-sm">
                        </div>

                        <!-- Message -->
                        <div>
                            <textarea name="contact[body]"
                                      id="ContactForm-body"
                                      rows="8"
                                      placeholder="{{ section.settings.message_placeholder }}"
                                      class="w-full px-4 py-3.5 rounded-md border border-slate-300 focus:outline-none focus:ring-2 focus:ring-slate-600 focus:border-transparent bg-white placeholder:text-slate-400 resize-none text-sm"></textarea>
                        </div>

                        <!-- Submit Button -->
                        <div class="pt-2">
                            <button type="submit"
                                    class="bg-teal-700 hover:bg-teal-800 text-white font-semibold py-3.5 px-8 rounded-md transition-colors duration-200 text-sm">
                                {{ section.settings.submit_button_text }}
                            </button>
                        </div>
                    </div>
                {% endform %}
            </div>

            <!-- Right: FAQ Banner with Image -->
            <div>
                <div class="relative bg-gradient-to-br from-teal-700 to-teal-800 rounded-2xl overflow-hidden shadow-xl h-full min-h-[500px] lg:min-h-[600px]">

                    <!-- Content Overlay -->
                    <div class="relative z-10 p-8 sm:p-10 lg:p-12 h-full flex flex-col justify-between">

                        <!-- Text Content -->
                        <div class="space-y-6 max-w-lg">
                            {% if section.settings.faq_heading != blank %}
                            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight">
                                {{ section.settings.faq_heading }}
                            </h2>
                            {% endif %}

                            <div class="space-y-4 text-white/90 text-sm sm:text-base leading-relaxed">
                                {% if section.settings.faq_text_1 != blank %}
                                <p>{{ section.settings.faq_text_1 }}</p>
                                {% endif %}

                                {% if section.settings.faq_text_2 != blank %}
                                <p>{{ section.settings.faq_text_2 }}</p>
                                {% endif %}
                            </div>

                            <!-- Buttons -->
                            <div class="flex flex-wrap gap-4 pt-2">
                                {% if section.settings.show_info_button %}
                                <a href="{{ section.settings.info_button_link }}" class="inline-block bg-white/20 hover:bg-white/30 backdrop-blur-sm text-white font-semibold px-6 py-3 rounded-lg transition-all duration-300 border border-white/30 text-sm">
                                    {{ section.settings.info_button_text }}
                                </a>
                                {% endif %}

                                {% if section.settings.show_contact_button %}
                                <a href="{{ section.settings.contact_button_link }}" class="inline-block bg-white hover:bg-white/90 text-teal-800 font-semibold px-6 py-3 rounded-lg transition-all duration-300 text-sm shadow-lg">
                                    {{ section.settings.contact_button_text }}
                                </a>
                                {% endif %}
                            </div>
                        </div>

                        <!-- Image Placeholder - Woman with Happy Face -->
                        <div class="absolute bottom-0 right-0 w-1/2 h-3/4 hidden lg:flex items-end justify-end">
                            {% if section.settings.faq_image != blank %}
                            <img src="{{ section.settings.faq_image | img_url: 'master' }}"
                                 alt="{{ section.settings.faq_image_alt }}"
                                 class="w-full h-full object-cover object-bottom opacity-90">
                            {% else %}
                            <div class="relative w-full h-full flex items-end justify-end">
                                <div class="text-center text-white/30 flex flex-col items-center justify-center w-full h-full">
                                    <svg class="w-40 h-40 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="0.5">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                                    </svg>
                                    <p class="text-xs font-medium">Happy Woman Image</p>
                                </div>
                            </div>
                            {% endif %}
                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

