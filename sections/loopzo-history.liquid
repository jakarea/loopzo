<section class="history_section bg-slate-50" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- H1: Main Heading -->
        {% if section.settings.main_heading != blank %}
        <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-slate-900 mb-6 sm:mb-8">
            {% assign title_parts = section.settings.main_heading | split: 'Loopzo' %}
            {{ title_parts[0] }}<span class="text-slate-700">Loopzo</span>{% if title_parts[1] %}{{ title_parts[1] }}{% endif %}
        </h1>
        {% endif %}

        <!-- P1: Introduction Paragraph -->
        {% if section.settings.intro_paragraph != blank %}
        <div class="max-w-5xl mb-12 sm:mb-16">
            <div class="text-[15px] sm:text-base lg:text-[17px] text-slate-700 leading-relaxed [&_strong]:font-semibold [&_strong]:text-slate-900">
                {{ section.settings.intro_paragraph }}
            </div>
        </div>
        {% endif %}

        <!-- Two Column Layout: Image + History Content -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-start">
            <!-- Left: Image -->
            <div class="order-2 lg:order-1">
                {% if section.settings.history_image != blank %}
                <figure>
                    <div class="rounded-3xl overflow-hidden shadow-2xl">
                        <img src="{{ section.settings.history_image | img_url: '600x450' }}"
                            alt="{{ section.settings.history_image.alt | default: 'Loopzo manufacturing facility - Handcrafted adaptive bicycles production' }}"
                            class="w-full h-auto object-cover aspect-[4/3]"
                            loading="lazy"
                            width="600"
                            height="450">
                    </div>
                </figure>
                {% endif %}
            </div>

            <!-- Right: History Content -->
            <article class="order-1 lg:order-2">
                <div class="lg:pl-4">
                    <!-- H2: History Heading -->
                    {% if section.settings.history_heading != blank %}
                    <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-slate-900 mb-5 leading-tight">
                        {{ section.settings.history_heading }}
                    </h2>
                    {% endif %}

                    <!-- P2: History Paragraph 1 -->
                    {% if section.settings.history_paragraph_1 != blank %}
                    <div class="text-[15px] sm:text-base text-slate-700 leading-relaxed mb-5 [&_strong]:font-semibold [&_strong]:text-slate-900">
                        {{ section.settings.history_paragraph_1 }}
                    </div>
                    {% endif %}

                    <!-- P3: History Paragraph 2 -->
                    {% if section.settings.history_paragraph_2 != blank %}
                    <div class="text-[15px] sm:text-base text-slate-700 leading-relaxed mb-6 [&_strong]:font-semibold [&_strong]:text-slate-900">
                        {{ section.settings.history_paragraph_2 }}
                    </div>
                    {% endif %}

                    {% if section.settings.history_link_text != blank and section.settings.history_link_url != blank %}
                    <a href="{{ section.settings.history_link_url }}" class="inline-flex items-center text-slate-900 font-semibold text-base hover:text-slate-700 transition-colors group">
                        {{ section.settings.history_link_text }}
                        <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                        </svg>
                    </a>
                    {% endif %}
                </div>
            </article>
        </div>

        <!-- CTA -->
        {% if section.settings.show_cta %}
        <div class="mt-12 sm:mt-16 pt-8 sm:pt-12 border-t border-slate-200">
            {% if section.settings.cta_text != blank %}
            <p class="text-base sm:text-lg text-slate-800 font-medium mb-5 leading-relaxed max-w-3xl">
                {{ section.settings.cta_text }}
            </p>
            {% endif %}

            {% if section.settings.cta_button_text != blank and section.settings.cta_button_link != blank %}
            <a href="{{ section.settings.cta_button_link }}"
               class="inline-flex items-center bg-slate-800 text-white px-8 py-4 rounded-xl font-semibold text-base hover:bg-slate-900 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-0.5 group">
                {{ section.settings.cta_button_text }}
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
                </svg>
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
</section>

{% schema %}
{
  "name": "Loopzo History",
  "tag": "section",
  "class": "section",
  "limit": 1,
  "settings": [
    {
      "type": "header",
      "content": "Main Heading (H1)"
    },
    {
      "type": "paragraph",
      "content": "Primary heading for SEO - should contain main keywords"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading (H1)",
      "default": "Maak kennis met Loopzo",
      "info": "This will be rendered as an H1 tag for SEO"
    },
    {
      "type": "header",
      "content": "Introduction Paragraph"
