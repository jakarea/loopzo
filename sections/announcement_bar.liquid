<div class="announcement_bar bg-gradient-to-r from-slate-50 to-white border-b border-slate-200 hidden md:block">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-3">

            <!-- Benefits List -->
            <div class="flex items-center gap-6 lg:gap-8">
                {%- for block in section.blocks -%}
                    {%- if block.type == 'benefit' and block.settings.benefit_text != blank -%}
                        <div class="flex items-center gap-2 group" {{ block.shopify_attributes }}>
                            {%- if block.settings.icon_svg != blank -%}
                            <div class="bg-slate-700 rounded-lg p-1.5 group-hover:bg-slate-600 transition-colors">
                                {{ block.settings.icon_svg }}
                            </div>
                            {%- endif -%}
                            <span class="text-slate-700 font-medium text-sm">{{ block.settings.benefit_text }}</span>
                        </div>
                    {%- endif -%}
                {%- endfor -%}
            </div>

            <!-- Contact Button -->
            {%- if section.settings.show_contact_button and section.settings.contact_text != blank and section.settings.contact_link != blank -%}
            <a href="{{ section.settings.contact_link }}"
               {%- if section.settings.open_in_new_tab -%} target="_blank" rel="noopener noreferrer"{%- endif -%}
               class="group bg-slate-700 hover:bg-slate-800 text-white font-semibold py-2 px-6 rounded-lg flex items-center gap-2 transition-all duration-300 ease-in-out shadow-md hover:shadow-lg hover:-translate-y-0.5">
                {%- if section.settings.button_left_icon != blank -%}
                    {{ section.settings.button_left_icon }}
                {%- endif -%}
                <span class="text-sm">{{ section.settings.contact_text }}</span>
                {%- if section.settings.button_right_icon != blank -%}
                    {{ section.settings.button_right_icon }}
                {%- endif -%}
            </a>
            {%- endif -%}
        </div>
    </div>
</div>

{% schema %}
