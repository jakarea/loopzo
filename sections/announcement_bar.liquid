  "name": "Announcement Bar",
  "class": "announcement-bar-section",
  "max_blocks": 6,
  "blocks": [
    {
      "type": "benefit",
      "name": "Benefit",
      "settings": [
        {
          "type": "html",
          "id": "icon_svg",
          "label": "Icon SVG",
          "info": "Paste SVG code with class='w-4 h-4 text-white'."
        },
        {
          "type": "inline_richtext",
          "id": "benefit_text",
