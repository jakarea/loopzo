<section class="blog_section bg-white" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Section Header -->
        <div class="text-center mb-8 sm:mb-12 md:mb-16">
            {% if section.settings.section_title != blank %}
            <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-gray-900">
                {{ section.settings.section_title }}
            </h2>
            {% endif %}
            {% if section.settings.section_subtitle != blank %}
            <p class="text-gray-600 mt-2 text-base sm:text-lg">
                {{ section.settings.section_subtitle }}
            </p>
            {% endif %}
        </div>

        <!-- Blog Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">

            {% if section.settings.use_blog_posts %}
                {%- assign blog = blogs[section.settings.blog_handle] -%}
                {%- if blog != blank -%}
                    {% for article in blog.articles limit: section.settings.posts_to_show %}
                    <article class="relative rounded-lg overflow-hidden shadow-lg group aspect-[3/4]">
                        {% if article.image != blank %}
                        <img src="{{ article.image | img_url: '600x800' }}"
                            alt="{{ article.image.alt | default: article.title }}"
                            class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                            loading="lazy">
                        {% else %}
                        <div class="w-full h-full bg-slate-200 flex items-center justify-center">
                            <span class="text-slate-400">No image</span>
                        </div>
                        {% endif %}

                        {% if article.tags.size > 0 %}
                        <span class="absolute top-3 sm:top-4 left-3 sm:left-4 bg-slate-700 text-white text-xs font-semibold px-3 py-1.5 rounded">
                            {{ article.tags | first }}
                        </span>
                        {% endif %}

                        <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black via-black/80 to-transparent p-4 sm:p-6 pt-16 sm:pt-20 text-white">
                            <h3 class="text-lg sm:text-xl font-bold">{{ article.title }}</h3>
                            <a href="{{ article.url }}" class="mt-2 inline-block text-xs sm:text-sm text-slate-300 hover:underline">
                                {{ section.settings.read_more_text | default: 'Read more' }} &rarr;
                            </a>
                        </div>
                    </article>
                    {% endfor %}
                {%- else -%}
                    <p class="col-span-3 text-center text-slate-600">No blog found. Please select a blog in the section settings.</p>
                {%- endif -%}
            {% else %}
                <!-- Manual Blog Posts -->
                {% if section.settings.post_1_title != blank %}
                <article class="relative rounded-lg overflow-hidden shadow-lg group aspect-[3/4]">
                    {% if section.settings.post_1_image != blank %}
                    <img src="{{ section.settings.post_1_image | img_url: '600x800' }}"
                        alt="{{ section.settings.post_1_alt_text | default: section.settings.post_1_title }}"
                        class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                        loading="lazy">
                    {% else %}
                    <img src="https://kovapaa.nl/cdn/shop/articles/68eb5b2f470df976912329c9caf6d318_720x.png"
                        alt="{{ section.settings.post_1_alt_text }}"
                        class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                        loading="lazy">
                    {% endif %}

                    {% if section.settings.post_1_category != blank %}
                    <span class="absolute top-3 sm:top-4 left-3 sm:left-4 bg-slate-700 text-white text-xs font-semibold px-3 py-1.5 rounded">
                        {{ section.settings.post_1_category }}
                    </span>
                    {% endif %}

                    <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black via-black/80 to-transparent p-4 sm:p-6 pt-16 sm:pt-20 text-white">
                        <h3 class="text-lg sm:text-xl font-bold">{{ section.settings.post_1_title }}</h3>
                        <a href="{{ section.settings.post_1_url | default: '#' }}" class="mt-2 inline-block text-xs sm:text-sm text-slate-300 hover:underline">
                            {{ section.settings.read_more_text | default: 'Read more' }} &rarr;
                        </a>
                    </div>
                </article>
                {% endif %}

                {% if section.settings.post_2_title != blank %}
                <article class="relative rounded-lg overflow-hidden shadow-lg group aspect-[3/4]">
                    {% if section.settings.post_2_image != blank %}
                    <img src="{{ section.settings.post_2_image | img_url: '600x800' }}"
                        alt="{{ section.settings.post_2_alt_text | default: section.settings.post_2_title }}"
                        class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                        loading="lazy">
                    {% else %}
                    <img src="https://kovapaa.nl/cdn/shop/articles/5a78a6e0ed299b3646682863f52aa18b_1080x.jpg"
                        alt="{{ section.settings.post_2_alt_text }}"
                        class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                        loading="lazy">
                    {% endif %}

                    {% if section.settings.post_2_category != blank %}
                    <span class="absolute top-3 sm:top-4 left-3 sm:left-4 bg-slate-700 text-white text-xs font-semibold px-3 py-1.5 rounded">
                        {{ section.settings.post_2_category }}
                    </span>
                    {% endif %}

                    <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black via-black/80 to-transparent p-4 sm:p-6 pt-16 sm:pt-20 text-white">
                        <h3 class="text-lg sm:text-xl font-bold">{{ section.settings.post_2_title }}</h3>
                        <a href="{{ section.settings.post_2_url | default: '#' }}" class="mt-2 inline-block text-xs sm:text-sm text-slate-300 hover:underline">
                            {{ section.settings.read_more_text | default: 'Read more' }} &rarr;
                        </a>
                    </div>
                </article>
                {% endif %}

                {% if section.settings.post_3_title != blank %}
                <article class="relative rounded-lg overflow-hidden shadow-lg group aspect-[3/4]">
                    {% if section.settings.post_3_image != blank %}
                    <img src="{{ section.settings.post_3_image | img_url: '600x800' }}"
                        alt="{{ section.settings.post_3_alt_text | default: section.settings.post_3_title }}"
                        class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                        loading="lazy">
                    {% else %}
                    <img src="https://kovapaa.nl/cdn/shop/articles/loopfiets_blog_1000x1000_5443403d-9b0e-49d4-8e18-f82bf5c768d3_720x.jpg"
                        alt="{{ section.settings.post_3_alt_text }}"
                        class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                        loading="lazy">
                    {% endif %}

                    {% if section.settings.post_3_category != blank %}
                    <span class="absolute top-3 sm:top-4 left-3 sm:left-4 bg-slate-700 text-white text-xs font-semibold px-3 py-1.5 rounded">
                        {{ section.settings.post_3_category }}
                    </span>
                    {% endif %}

                    <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black via-black/80 to-transparent p-4 sm:p-6 pt-16 sm:pt-20 text-white">
                        <h3 class="text-lg sm:text-xl font-bold">{{ section.settings.post_3_title }}</h3>
                        <a href="{{ section.settings.post_3_url | default: '#' }}" class="mt-2 inline-block text-xs sm:text-sm text-slate-300 hover:underline">
                            {{ section.settings.read_more_text | default: 'Read more' }} &rarr;
                        </a>
                    </div>
                </article>
                {% endif %}
            {% endif %}

        </div>

        <!-- View All Button -->
        {% if section.settings.button_text != blank %}
        <div class="text-center mt-12 sm:mt-16 md:mt-20">
            <a href="{{ section.settings.button_url | default: '#' }}" class="inline-flex items-center bg-slate-600 text-white font-bold py-2.5 sm:py-3 px-6 sm:px-8 rounded-full space-x-2.5 transition hover:bg-slate-700 text-sm sm:text-base">
                <span>{{ section.settings.button_text }}</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 sm:h-5 sm:w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
            </a>
        </div>
        {% endif %}

    </div>
</section>

