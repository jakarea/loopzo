    {
      "type": "header",
      "content": "Email Card"
    },
    {
      "type": "checkbox",
      "id": "show_email_card",
      "label": "Show Email Card",
      "default": true
    },
    {
      "type": "text",
      "id": "email_card_title",
      "label": "Email Card Title",
      "default": "Binnen 24 uur reactie"
    },
    {
      "type": "text",
      "id": "email_address",
      "label": "Email Address",
      "default": "klantenservice@loopzo.nl"
    },
    {
      "type": "text",
      "id": "email_card_button_text",
      "label": "Email Button Text",
      "default": "Mail ons op: klantenservice@loopzo.nl"
    },
    {
      "type": "header",
      "content": "Location Card"
    },
    {
      "type": "checkbox",
      "id": "show_location_card",
      "label": "Show Location Card",
      "default": true
    },
    {
      "type": "text",
      "id": "location_card_title",
      "label": "Location Card Title",
      "default": "Gevestigd in Moordrecht"
