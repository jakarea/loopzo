<footer class="text-sm">
    <style>
        .instagram-icon {
            background: linear-gradient(45deg, #405DE6, #5851DB, #833AB4, #C13584, #E1306C, #FD1D1D);
        }
        .instagram-icon:hover {
            background: linear-gradient(45deg, #5851DB, #833AB4, #C13584, #E1306C, #FD1D1D, #F56040);
        }
        .youtube-icon {
            background: #FF0000;
        }
        .youtube-icon:hover {
            background: #CC0000;
        }
    </style>
    <div class="footer_div bg-slate-800 text-gray-200 py-12 sm:py-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 sm:gap-12">
                <!-- Logo, Rating and Social -->
                <div class="lg:col-span-4">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 items-center">
                        <div class="flex justify-center md:justify-start">
                            {% if section.settings.footer_logo != blank %}
                            <img
                                class="h-20 w-auto object-contain"
                                src="{{ section.settings.footer_logo | image_url: width: 400 }}"
                                alt="{{ section.settings.logo_alt_text | default: 'Loopzo Logo' }}"
                                width="400"
                                height="80"
                                loading="eager">
                            {% else %}
                            <img
                                class="h-20 w-auto object-contain"
                                src="{{ 'loopzo_light_square_logo.png' | asset_url }}"
                                alt="Loopzo Logo"
                                width="400"
                                height="80"
                                loading="eager">
                            {% endif %}
                        </div>
                        <div class="text-center">
                            {% if section.settings.show_rating %}
                            <div class="flex justify-center text-amber-400 gap-0.5">
                                {% assign rating_value = section.settings.rating_value | default: 5 %}
                                {% assign full_stars = rating_value | floor %}
                                {% assign decimal_part = rating_value | modulo: 1 %}

                                {% comment %} Full stars {% endcomment %}
                                {% for i in (1..full_stars) %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M10 15.27L16.18 19l-1.64-7.03L20 7.24l-7.19-.61L10 0 7.19 6.63 0 7.24l5.46 4.73L3.82 19 10 15.27z"></path></svg>
                                {% endfor %}

                                {% comment %} Half star if decimal part >= 0.25 and < 0.75 {% endcomment %}
                                {% if decimal_part >= 0.25 and decimal_part < 0.75 %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><defs><linearGradient id="half-gradient-{{ section.id }}"><stop offset="50%" stop-color="currentColor"/><stop offset="50%" stop-color="#4B5563" stop-opacity="1"/></linearGradient></defs><path fill="url(#half-gradient-{{ section.id }})" d="M10 15.27L16.18 19l-1.64-7.03L20 7.24l-7.19-.61L10 0 7.19 6.63 0 7.24l5.46 4.73L3.82 19 10 15.27z"></path></svg>
                                {% elsif decimal_part >= 0.75 %}
                                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"><path d="M10 15.27L16.18 19l-1.64-7.03L20 7.24l-7.19-.61L10 0 7.19 6.63 0 7.24l5.46 4.73L3.82 19 10 15.27z"></path></svg>
                                {% endif %}

                                {% comment %} Empty stars {% endcomment %}
                                {% assign remaining = 5 | minus: rating_value %}
                                {% if decimal_part >= 0.25 and decimal_part < 0.75 %}
                                    {% assign empty_stars = remaining | floor %}
                                {% elsif decimal_part >= 0.75 %}
                                    {% assign empty_stars = remaining | floor %}
                                {% else %}
                                    {% assign empty_stars = remaining | ceil %}
                                {% endif %}
                                {% for i in (1..empty_stars) %}
                                    <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 20 20"><path d="M10 15.27L16.18 19l-1.64-7.03L20 7.24l-7.19-.61L10 0 7.19 6.63 0 7.24l5.46 4.73L3.82 19 10 15.27z"></path></svg>
                                {% endfor %}
                            </div>
                            {% endif %}
                            {% if section.settings.rating_text != blank %}
                            <p class="text-xs sm:text-sm text-gray-400 mt-2">{{ section.settings.rating_text }}</p>
                            {% endif %}
                            {% if section.settings.reviews_link != blank %}
                            <a href="{{ section.settings.reviews_link }}" target="_blank" rel="noopener" class="text-xs sm:text-sm text-slate-300 font-medium underline hover:text-white">{{ section.settings.reviews_text | default: 'Bekijk reviews' }}</a>
                            {% endif %}
                        </div>
                        {% if section.settings.show_social %}
                        <div class="flex justify-center md:justify-end items-center gap-3">
                            <span class="text-xs sm:text-sm text-gray-400 font-medium">{{ section.settings.follow_us_text | default: 'Volg ons:' }}</span>
                            <div class="flex items-center gap-2">
                                {% if section.settings.facebook_link != blank %}
                                <a href="{{ section.settings.facebook_link }}" target="_blank" rel="noopener" class="w-8 h-8 flex items-center justify-center bg-slate-700 text-gray-300 rounded-full hover:bg-blue-600 hover:text-white transition-all duration-300">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 17.062 24 12.073z"/></svg>
                                </a>
                                {% endif %}
                                {% if section.settings.instagram_link != blank %}
                                <a href="{{ section.settings.instagram_link }}" target="_blank" rel="noopener" class="w-8 h-8 flex items-center justify-center text-gray-300 rounded-full hover:text-white transition-all duration-300 instagram-icon">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 448 512"><path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z"/></svg>
                                </a>
                                {% endif %}
                                {% if section.settings.twitter_link != blank %}
                                <a href="{{ section.settings.twitter_link }}" target="_blank" rel="noopener" class="w-8 h-8 flex items-center justify-center bg-slate-700 text-gray-300 rounded-full hover:bg-black hover:text-white transition-all duration-300">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
                                </a>
                                {% endif %}
                                {% if section.settings.linkedin_link != blank %}
                                <a href="{{ section.settings.linkedin_link }}" target="_blank" rel="noopener" class="w-8 h-8 flex items-center justify-center bg-slate-700 text-gray-300 rounded-full hover:bg-blue-700 hover:text-white transition-all duration-300">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                                </a>
                                {% endif %}
                                {% if section.settings.youtube_link != blank %}
                                <a href="{{ section.settings.youtube_link }}" target="_blank" rel="noopener" class="w-8 h-8 flex items-center justify-center text-gray-300 rounded-full hover:text-white transition-all duration-300 youtube-icon">
                                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 576 512"><path d="M549.655 124.083c-6.281-23.65-24.787-42.276-48.284-48.597C458.781 64 288 64 288 64S117.22 64 74.629 75.486c-23.497 6.322-42.003 24.947-48.284 48.597-11.412 42.867-11.412 132.305-11.412 132.305s0 89.438 11.412 132.305c6.281 23.65 24.787 41.5 48.284 47.821C117.22 448 288 448 288 448s170.78 0 213.371-11.486c23.497-6.321 42.003-24.171 48.284-47.821 11.412-42.867 11.412-132.305 11.412-132.305s0-89.438-11.412-132.305zm-317.51 213.508V175.185l142.739 81.205-142.739 81.201z"/></svg>
                                </a>
                                {% endif %}
                            </div>
                        </div>
                        {% endif %}
                    </div>
                </div>
            </div>
            <div class="mt-12 pt-12 border-t border-slate-700 grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
                <div class="col-span-2">

                    <h3 class="text-white font-semibold mb-4 text-base">{{ section.settings.about_text_heading }}</h3>
                    <div class="text-sm text-gray-300 space-y-3 leading-relaxed">
                        {{ section.settings.about_text }}
                    </div>
                </div>
                {% for block in section.blocks %}
                {% if block.type == 'nav_column' %}
                <div {{ block.shopify_attributes }}>
                    {% if block.settings.heading != blank %}
                    <h3 class="text-white font-semibold mb-4 text-base">{{ block.settings.heading }}</h3>
                    {% endif %}
                    <ul class="space-y-3">
                        {% if block.settings.menu != blank %}
                            {% for link in linklists[block.settings.menu].links %}
                            <li><a href="{{ link.url }}" class="hover:text-slate-200 transition text-sm">{{ link.title }}</a></li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
                {% endif %}
                {% endfor %}
                <div>
                    <h3 class="text-white font-semibold mb-4 text-base">{{ 'sections.loopzo_footer.contact' | t }}</h3>
                    <div class="space-y-4">
                        <div class="flex gap-3">
                            <svg class="w-5 h-5 flex-shrink-0 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0L6.343 16.657a8 8 0 1111.314 0z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                            </svg>
                            <span class="text-sm">loopzo<br>Guldenweg 23<br>7051 HT Varsseveld, NL</span>
                        </div>
                        <div class="flex gap-3 items-center">
                            <svg class="w-5 h-5 flex-shrink-0 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                            </svg>
                            <a href="tel:+31315257370" class="hover:text-slate-200 transition text-sm">+31 315 - 25 73 70</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Developer Credit -->
    <div class="bg-black border-t-2 border-slate-700 py-6">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex flex-col sm:flex-row justify-center items-center gap-2 text-slate-300 text-xs sm:text-sm">
                <p class="flex items-center gap-2 flex-wrap justify-center">
                    <span>Crafted with passion</span>
                    <span class="text-red-500 animate-pulse text-base">❤️</span>
                    <span>and countless cups of coffee</span>
                    <span class="text-base">☕</span>
                    <span>by</span>
                </p>
                <a href="https://giopio.com"
                   target="_blank"
                   rel="noopener noreferrer"
                   class="group font-bold text-white hover:text-blue-400 transition-all duration-300 flex items-center gap-1.5">
                    <span class="relative text-base">
                        giopio
                        <span class="absolute -bottom-1 left-0 w-full h-0.5 bg-current transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></span>
                    </span>
                    <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                    </svg>
                </a>
            </div>
        </div>
    </div>
</footer>

