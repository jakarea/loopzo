<style>
    .dealer-point-section {
        position: relative;
        overflow: hidden;
    }
    
    .dealer-map-container {
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 400px;
    }
    
    /* Decorative gear patterns */
    .gear-decoration {
        position: absolute;
        opacity: 0.15;
        z-index: 1;
    }
    
    .gear-top-left {
        top: -30px;
        left: -30px;
        width: 180px;
        height: 180px;
        animation: rotate-slow 30s linear infinite;
    }
    
    .gear-bottom-right {
        bottom: -20px;
        right: -20px;
        width: 120px;
        height: 120px;
        animation: rotate-slow 25s linear infinite reverse;
    }
    
    @keyframes rotate-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }
    
    /* Map styling */
    .map-wrapper {
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 500px;
    }
    
    .map-frame {
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 
            0 25px 50px -12px rgba(51, 65, 85, 0.25),
            0 0 0 1px rgba(51, 65, 85, 0.1);
    }
    
    .map-frame::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        border-radius: 20px;
        border: 3px solid rgba(51, 65, 85, 0.15);
        pointer-events: none;
        z-index: 10;
    }
    
    .map-frame iframe {
        display: block;
        width: 100%;
        height: 400px;
        border: none;
        filter: saturate(0.9) contrast(1.05);
        transition: filter 0.3s ease;
    }
    
    .map-frame:hover iframe {
        filter: saturate(1) contrast(1);
    }
    
    /* Corner decorations */
    .map-corner {
        position: absolute;
        width: 40px;
        height: 40px;
        z-index: 15;
        pointer-events: none;
    }
    
    .map-corner::before,
    .map-corner::after {
        content: '';
        position: absolute;
        background: #334155;
    }
    
    .map-corner-tl {
        top: -3px;
        left: -3px;
    }
    .map-corner-tl::before { width: 20px; height: 3px; top: 0; left: 0; border-radius: 3px 0 0 0; }
    .map-corner-tl::after { width: 3px; height: 20px; top: 0; left: 0; border-radius: 3px 0 0 0; }
    
    .map-corner-tr {
        top: -3px;
        right: -3px;
    }
    .map-corner-tr::before { width: 20px; height: 3px; top: 0; right: 0; border-radius: 0 3px 0 0; }
    .map-corner-tr::after { width: 3px; height: 20px; top: 0; right: 0; border-radius: 0 3px 0 0; }
    
    .map-corner-bl {
        bottom: -3px;
        left: -3px;
    }
    .map-corner-bl::before { width: 20px; height: 3px; bottom: 0; left: 0; border-radius: 0 0 0 3px; }
    .map-corner-bl::after { width: 3px; height: 20px; bottom: 0; left: 0; border-radius: 0 0 0 3px; }
    
    .map-corner-br {
        bottom: -3px;
        right: -3px;
    }
    .map-corner-br::before { width: 20px; height: 3px; bottom: 0; right: 0; border-radius: 0 0 3px 0; }
    .map-corner-br::after { width: 3px; height: 20px; bottom: 0; right: 0; border-radius: 0 0 3px 0; }
    
    /* Location badge */
    .location-badge {
        position: absolute;
        top: 20px;
        left: 20px;
        z-index: 20;
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 12px 18px;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-radius: 50px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        animation: float-badge 3s ease-in-out infinite;
    }
    
    .location-badge-icon {
        width: 32px;
        height: 32px;
        background: #334155;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }
    
    .location-badge-icon svg {
        width: 16px;
        height: 16px;
        color: white;
    }
    
    .location-badge-text {
        font-size: 0.8rem;
        font-weight: 600;
        color: #334155;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    
    @keyframes float-badge {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-5px); }
    }
    
    /* Decorative dots pattern */
    .dots-pattern {
        position: absolute;
        z-index: 1;
        opacity: 0.4;
    }
    
    .dots-pattern-left {
        top: 50%;
        left: -40px;
        transform: translateY(-50%);
    }
    
    .dots-pattern-right {
        bottom: 20px;
        right: -30px;
    }
    
    /* Location pin */
    .location-pin {
        position: absolute;
        z-index: 3;
        transform: translate(-50%, -100%);
        animation: bounce-pin 2s ease-in-out infinite;
    }
    
    .pin-marker {
        width: 40px;
        height: 52px;
        background: #334155;
        border-radius: 50% 50% 50% 0;
        transform: rotate(-45deg);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 15px rgba(51, 65, 85, 0.4);
    }
    
    .pin-inner {
        width: 16px;
        height: 16px;
        background: white;
        border-radius: 50%;
        transform: rotate(45deg);
    }
    
    .pin-pulse {
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 20px;
        height: 6px;
        background: rgba(51, 65, 85, 0.3);
        border-radius: 50%;
        animation: pulse-shadow 2s ease-in-out infinite;
    }
    
    @keyframes bounce-pin {
        0%, 100% { transform: translate(-50%, -100%); }
        50% { transform: translate(-50%, -110%); }
    }
    
    @keyframes pulse-shadow {
        0%, 100% { 
            transform: translateX(-50%) scale(1);
            opacity: 0.3;
        }
        50% { 
            transform: translateX(-50%) scale(1.5);
            opacity: 0.1;
        }
    }
    
    /* Info cards */
    .info-card {
        display: flex;
        align-items: flex-start;
        gap: 16px;
        padding: 16px 20px;
        background: #f8fafc;
        border-radius: 12px;
        transition: all 0.3s ease;
    }
    
    .info-card:hover {
        background: #f1f5f9;
        transform: translateX(5px);
    }
    
    .icon-badge {
        flex-shrink: 0;
        width: 44px;
        height: 44px;
        background: #334155;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 12px rgba(51, 65, 85, 0.2);
    }
    
    .icon-badge svg {
        width: 22px;
        height: 22px;
        color: white;
    }
    
    .info-content {
        flex: 1;
    }
    
    .info-label {
        font-size: 0.875rem;
        font-weight: 700;
        color: #334155;
        margin-bottom: 4px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
    }
    
    .info-value {
        font-size: 0.95rem;
        color: #64748b;
        line-height: 1.5;
    }
    
    .info-value a {
        color: #334155;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.2s;
    }
    
    .info-value a:hover {
        color: #1e293b;
        text-decoration: underline;
    }
    
    /* Contact button */
    .contact-btn {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 32px;
        background: #334155;
        color: white;
        font-weight: 600;
        font-size: 0.95rem;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(51, 65, 85, 0.25);
    }
    
    .contact-btn:hover {
        background: #1e293b;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(51, 65, 85, 0.35);
    }
    
    .contact-btn svg {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }
    
    .contact-btn:hover svg {
        transform: translateX(4px);
    }
    
    /* Highlighted text */
    .highlight-text {
        color: #334155;
        font-weight: 700;
    }
    
    .underline-highlight {
        text-decoration: underline;
        text-decoration-color: #334155;
        text-underline-offset: 2px;
    }
    
    /* CTA Invitation Banner */
    .cta-invitation {
        position: relative;
        margin-top: 32px;
        padding-top: 28px;
        border-top: 1px solid rgba(51, 65, 85, 0.1);
    }
    
    .cta-paragraph {
        font-size: 1.1rem;
        line-height: 1.7;
        color: #475569;
        margin-bottom: 24px;
    }
    
    .cta-paragraph .highlight {
        color: #1e293b;
        font-weight: 600;
        position: relative;
    }
    
    .cta-paragraph .highlight::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, #334155 0%, #64748b 100%);
        border-radius: 2px;
    }
    
    .cta-paragraph .emoji {
        display: inline-block;
        margin-left: 6px;
        animation: wave 2s ease-in-out infinite;
    }
    
    @keyframes wave {
        0%, 100% { transform: rotate(0deg); }
        25% { transform: rotate(15deg); }
        75% { transform: rotate(-10deg); }
    }
</style>

