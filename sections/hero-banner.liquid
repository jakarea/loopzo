<!-- Hero Banner Section -->
<section class="hero relative bg-gray-100" aria-label="Hero section">

  <!-- Background Image -->
  {%- if section.settings.hero_image != blank -%}
    <div class="h-[60vh] sm:h-[65vh] md:h-[70vh] overflow-hidden bg-gray-200">
      <img
        src="{{ section.settings.hero_image | image_url: width: 1920 }}"
        srcset="{{ section.settings.hero_image | image_url: width: 768 }} 768w,
                {{ section.settings.hero_image | image_url: width: 1024 }} 1024w,
                {{ section.settings.hero_image | image_url: width: 1920 }} 1920w"
        sizes="100vw"
        alt="{{ section.settings.image_alt }}"
        class="w-full h-full object-cover object-center"
        loading="eager"
        width="1920"
        height="1080">
    </div>
  {%- endif -%}

  <!-- Overlay Card -->
  {%- if section.settings.brand_name != blank or section.settings.heading != blank or section.settings.description != blank or section.settings.button_1_text != blank or section.settings.button_2_text != blank -%}
  <div class="md:absolute md:inset-0 md:flex md:items-center">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 w-full">

      <div class="relative bg-slate-800 text-white rounded-2xl p-6 sm:p-8 md:p-10 max-w-lg mx-auto md:mx-0 md:ml-auto
      -mt-20 sm:-mt-24 md:mt-0 shadow-2xl">

        <!-- Brand Name / Eyebrow -->
        {%- if section.settings.brand_name != blank -%}
          <span class="block text-xs sm:text-sm font-semibold text-gray-300 uppercase tracking-wider" aria-label="Brand name">
            {{ section.settings.brand_name }}
          </span>
        {%- endif -%}

        <!-- Heading -->
        {%- if section.settings.heading != blank -%}
          <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold {% if section.settings.brand_name != blank %}mt-2{% endif %}">
            {{ section.settings.heading }}
          </h1>
        {%- endif -%}

        <!-- Description -->
        {%- if section.settings.description != blank -%}
          <div class="text-sm sm:text-base text-gray-200 mt-3 sm:mt-4">
            {{ section.settings.description }}
          </div>
        {%- endif -%}

        <!-- CTA Buttons -->
        {%- if section.settings.button_1_text != blank or section.settings.button_2_text != blank -%}
        <div class="flex flex-col sm:flex-row flex-wrap gap-3 sm:gap-4 mt-6 sm:mt-8">

          <!-- Button 1 (Primary) -->
          {%- if section.settings.button_1_text != blank and section.settings.button_1_link != blank -%}
            <a
              href="{{ section.settings.button_1_link }}"
              {%- if section.settings.button_1_open_new_tab -%} target="_blank" rel="noopener noreferrer"{%- endif -%}
              class="bg-slate-600 text-white font-bold py-2.5 sm:py-3 px-5 sm:px-6 rounded-lg
                flex items-center justify-center gap-2 transition hover:bg-slate-700 text-sm sm:text-base">

              {%- if section.settings.button_1_icon != blank -%}
                <span class="w-4 h-4 sm:w-5 sm:h-5">{{ section.settings.button_1_icon }}</span>
              {%- endif -%}

              <span>{{ section.settings.button_1_text }}</span>

              {%- unless section.settings.button_1_icon != blank -%}
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              {%- endunless -%}
            </a>
          {%- endif -%}

          <!-- Button 2 (Secondary) -->
          {%- if section.settings.button_2_text != blank and section.settings.button_2_link != blank -%}
            <a
              href="{{ section.settings.button_2_link }}"
              {%- if section.settings.button_2_open_new_tab -%} target="_blank" rel="noopener noreferrer"{%- endif -%}
              class="bg-white text-slate-800 font-bold py-2.5 sm:py-3 px-5 sm:px-6 rounded-lg
                flex items-center justify-center gap-2 transition-all duration-300 ease-in-out hover:bg-gray-100 shadow-md hover:shadow-lg hover:-translate-y-0.5 text-sm sm:text-base">

              {%- if section.settings.button_2_icon != blank -%}
                <span class="w-4 h-4 sm:w-5 sm:h-5">{{ section.settings.button_2_icon }}</span>
              {%- endif -%}

              <span>{{ section.settings.button_2_text }}</span>

              {%- unless section.settings.button_2_icon != blank -%}
                <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                </svg>
              {%- endunless -%}
            </a>
          {%- endif -%}

        </div>
        {%- endif -%}

      </div>

    </div>
  </div>
  {%- endif -%}
</section>

