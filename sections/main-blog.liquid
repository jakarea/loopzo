{{ 'template-blog.css' | asset_url | stylesheet_tag }}

{%- paginate blog.articles by 6 -%}
<div class="blog-page bg-white" style="padding-top: 60px; padding-bottom: 80px;">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

        <!-- Blog Header -->
        <div class="text-center mb-12 sm:mb-16">
            <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold text-slate-900 mb-4">
                {{ blog.title }}
            </h1>
            {% if blog.description != blank %}
            <p class="text-slate-600 text-base sm:text-lg max-w-3xl mx-auto">
                {{ blog.description }}
            </p>
            {% endif %}
        </div>

        <!-- Blog Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 mb-12">
            {% for article in blog.articles %}
            <article class="relative rounded-lg overflow-hidden shadow-lg group aspect-[3/4] cursor-pointer" onclick="window.location='{{ article.url }}'">
                {% if article.image != blank %}
                <img src="{{ article.image | image_url: width: 600, height: 800, crop: 'center' }}"
                    alt="{{ article.image.alt | default: article.title }}"
                    class="w-full h-full object-cover object-center transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                    width="600"
                    height="800">
                {% else %}
                <div class="w-full h-full bg-slate-200 flex items-center justify-center">
                    <svg class="w-16 h-16 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
                    </svg>
                </div>
                {% endif %}

                {% if article.tags.size > 0 %}
                <span class="absolute top-3 sm:top-4 left-3 sm:left-4 bg-slate-700 text-white text-xs font-semibold px-3 py-1.5 rounded">
                    {{ article.tags.first }}
                </span>
                {% endif %}

                <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black via-black/80 to-transparent p-4 sm:p-6 pt-16 sm:pt-20 text-white">
                    <h2 class="text-lg sm:text-xl font-bold mb-2">{{ article.title }}</h2>

                    {% if section.settings.show_date %}
                    <div class="flex items-center text-xs sm:text-sm text-slate-300 mb-2">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        {{ article.published_at | date: "%d %B %Y" }}
                    </div>
                    {% endif %}

                    {% if section.settings.show_author and article.author != blank %}
                    <div class="flex items-center text-xs sm:text-sm text-slate-300">
                        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                        {{ article.author }}
                    </div>
                    {% endif %}

                    <a href="{{ article.url }}" class="mt-3 inline-block text-xs sm:text-sm text-white hover:underline font-semibold">
                        Lees meer &rarr;
                    </a>
                </div>
            </article>
            {% endfor %}
        </div>

        <!-- Pagination -->
        {% if paginate.pages > 1 %}
        <div class="flex justify-center items-center space-x-2">
            {% if paginate.previous %}
            <a href="{{ paginate.previous.url }}" class="px-4 py-2 bg-slate-600 text-white rounded-lg hover:bg-slate-700 transition">
                &larr; Vorige
            </a>
            {% endif %}

            <span class="px-4 py-2 text-slate-600">
                Pagina {{ paginate.current_page }} van {{ paginate.pages }}
            </span>

            {% if paginate.next %}
            <a href="{{ paginate.next.url }}" class="px-4 py-2 bg-slate-600 text-white rounded-lg hover:bg-slate-700 transition">
                Volgende &rarr;
            </a>
            {% endif %}
        </div>
        {% endif %}

    </div>
</div>
{% endpaginate %}

{% schema %}
{
  "name": "Blog Posts",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Blog Settings"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show publication date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show author",
      "default": false
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 80
    }
  ]
}
{% endschema %}
